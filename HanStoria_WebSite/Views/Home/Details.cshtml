@using HanStoria_WebSite.Entity;
@model Product
@{
    ViewBag.Title = "Details";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>HanStoria</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/productDetail.css" />
</head>
<body>
    <script src="https://kit.fontawesome.com/38690bf345.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CSS dosyası -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <div class="product">
        <div class="container pb-5">
            <div class="row">
                <div class="col-md-6">
                    <img src="@Model.PhotoName" class="img-fluid ">
                </div>
                <div class="col-md-6">
                    <div class="row mt-1">
                        <div class="col-md-12">
                            <h1>@Model.Name</h1>
                        </div>
                        <div class="row mt-1">
                            <div class="col-md-12">

                                @if(Model.IsApproved){
                                    <span class="badge badge-primary">Stokta</span>
                                }
                                else{
                                 <span class="badge badge-danger">Stokta Değil</span>
                                }

                                
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col-md-12">
                                <div id="description">@Model.Description</div>
                                <div class="row mt-1">
                                    <div class="col-md-4">
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-solid fa-star"></i>
                                        <i class="fa-regular fa-star"></i>
                                        <span class="badge badge-success">75</span>
                                    </div>
                                    
                                </div>
                                <div class="col-md-12">

                                    <span><h3 id="product-price">₺ @Model.Price</h3></span>

                                </div>

                                <div class="col-md-12">
                                    @using (Html.BeginForm("AddToCard","Card"))
                                    {
                                        @Html.HiddenFor(i=>i.Id)
                                        <button type="submit" class="btn btn-dark">
                                            <i class="fa-solid fa-cart-shopping" style="color: #ff5757;"></i>
                                            Sepete Ekle
                                        </button>
                                    }


                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <ul class="nav nav-tabs">
                        <h4>Ürün Detayları</h4>
                        <p id="description"> @Model.Description</p>

                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/holder.min.js" type="text/javascript"></script>
</body>

</html>